---
import Layout from '../layouts/BlogPost.astro';
import { getCollection } from 'astro:content';

const glossary = (await getCollection('glossary'));

---

<Layout
	title="Glossary"
	description="Words you might hear, and their definitions"
>
	<dl>
	{
		glossary.map(g => {
			const {id, word, definition, seeAlso} = g.data
			console.log(seeAlso)
			return (
				<dt id={id}>{word}</dt>
				<dd>
					<p>{definition}</p>
					{seeAlso && 'See Also: '}
					{seeAlso?.map(s => <a class="seealso" href={`#${s}`}>{s}</a>)}
				</dd>
			);
		})
	}
	</dl>
</Layout>
<style>
	dt {
		margin-top: 1.2em;
		margin-bottom: 0.5em;
		font-weight: bold;
	}

	.seealso {
		margin-right: 0.3em;
		padding: 0.2em;
	}
</style>